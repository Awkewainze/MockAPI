{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "dist",
        "declaration": true,
        "removeComments": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "tests"
    ]
}